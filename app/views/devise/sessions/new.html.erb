<div class="hpanel">

  <% if flash[:alert] && flash[:timedout] %>
    <div class="alert alert-info" id="flash_error">
      <i class="fa fa-clock-o"></i>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:alert] && !flash[:timedout] %>
    <div class="alert alert-danger">
      <i class="fa fa-exclamation-circle"></i>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="panel-body" style="padding-left: 80px; padding-right: 80px; padding-bottom:30px">
    <h2 class="text-center" style="margin-bottom: 30px">
      CarterApp <span style="font-style: italic">Beta</span><br/>
      <small>Auditoría de tráfico de correo</small>
    </h2>
      <%= simple_form_for :session, url: "/users/auth/zimbraadmin/callback",
                          wrapper: :vertical_form do |f| %>
       <%= f.input :email, label_html: { class: 'col-sm-10' },
           label: 'Tu email de ZBoxApp' %>
       <%= f.input :password,  label_html: { class: 'col-sm-10' },
           label: 'Tu contraseña de correo' %>
       <%= f.button :submit, "Ingresar", class: "btn btn-success btn-block" %>
      <% end %>
  </div>
</div>
