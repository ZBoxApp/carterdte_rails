<div class="modal fade" id="edit_restriction-<%= restriction.id %>" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header text-center">
                <h4 class="modal-title">Editar Restricción</h4>
            </div>
            <%= form_for restriction do |f| -%>
              <div class="modal-body">
                  <%= f.text_field :name, class: "form-control input-lg m-b", placeholder: "No puede estar vacío", autofocus: true %>
                  <%= f.hidden_field :account_id, value: restriction.account_id %>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                  <%= f.submit "Guardar", class: "btn btn-primary"%>
              </div>
            <% end -%>
        </div>
    </div>
</div>