<div class="table-responsive">
  <table cellpadding="1" cellspacing="1" class="table table-striped mtalog">
    <thead>
      <tr>
        <th>Destino</th>
        <th>Respuesta del servidor destino</th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |log| %>
        <tr>
          <td>
            <ul class="list-unstyled">
              <li><strong><%= display_log_field log.to %></strong></li>
              <li><%= display_log_field log.dst_relayip %></li>
              <li><%= I18n.l log.timestamp.in_time_zone(-3), format: :log %></li>
            </ul>            
          </td>
          <td>
            <%= log.reason %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>